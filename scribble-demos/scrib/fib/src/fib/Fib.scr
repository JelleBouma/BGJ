module fib.Fib;


data <java> "java.lang.Integer" from "rt.jar" as Int;


global protocol Adder(role C, role S)
{
	/*[x+1<10 && x<9  && x<10]
	ADD(x:Int) from C to S;*/

	choice at C
	{
		ADD(Int, Int) from C to S;
		RES(Int) from S to C;
		do Adder(C, S);
	}
	or
	{
		BYE() from C to S;
		BYE() from S to C;
	}	
}




global protocol Fibonacci(role A, role B)
{
	rec Fib
	{
		choice at A
		{
			fibonacci(Int) from A to B;
			fibonacci(Int) from B to A;
			continue Fib;
		}
		or
		{
			end() from A to B;
		}
	}
}
