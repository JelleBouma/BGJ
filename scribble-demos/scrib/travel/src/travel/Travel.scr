module travel.Travel;

data <java> "java.lang.Integer" from "rt.jar" as Int;
data <java> "java.lang.String" from "rt.jar" as String;


//*
global protocol Booking(role C, role A, role S)
{
	choice at C
	{
		Query(String) from C to A;
		Quote(Int) from A to C;
		Dummy() from A to S;   // Dummy
		do Booking(C, A, S);
	}
	or
	{
		choice at C
		{
			Yes() from C to A;
			Yes() from A to S;
			Payment(String) from C to S;
			Ack() from S to C;
		}
		or
		{
			No() from C to A;
			No() from A to S;
		}
		Bye() from C to A;
	}
}
//*/


